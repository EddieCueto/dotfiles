Config {
    font = "xft:Anonymous Pro:pixelsize=13:style=Regular",
    additionalFonts = ["xft:Noto Sans:pixelsize=10:style=Bold","xft:FontAwesome:style=Regular:pixelsize=13"]
   , bgColor          = "#2E3440"
   , fgColor          = "#81a1c1"
   --, position         = TopSize C 100 30
   , position         = Static { xpos = 0 , ypos = 0, width = 1848, height = 24 }
   , textOffset       = -1
   , iconOffset       = -8
   , alpha            = 255
   , border           = BottomB
   , borderWidth      = 0
   , borderColor      = "#c0c5ce"
   , lowerOnStart     = True
   , hideOnStart      = False
   , allDesktops      = True
   , overrideRedirect = True
   , pickBroadest     = True
   , persistent       = True
   , sepChar          = "%"
--
   , alignSep         = "}{"
   , template         = "%UnsafeStdinReader%<fc=#666666> | </fc>%battery%<fc=#666666> | </fc>%dynnetwork% }{ %date%<fc=#666666> | </fc><action=xdotool key super+y>%kbd%</action><fc=#666666> | </fc>%disku%<fc=#666666> | </fc>%coretemp%<fc=#666666> | </fc>%multicpu%<fc=#666666> | </fc>%memory%"
   , commands         =
      [ Run MultiCpu                            [ "--template" , "<fc=#88c0d0><fn=2> </fn></fc><total> %"
                                                , "--Low"      , "50"        -- units: %
                                                , "--High"     , "95"        -- units: %
                                                , "--low"      , "#a3be8c"
                                                , "--normal"   , "#d08770"
                                                , "--high"     , "#bf616a"
                                                ] 10

      , Run CoreTemp                            [ "--template" , "<fc=#88c0d0><fn=2></fn></fc> <core0> °C"
                                                , "--Low"      , "50"         -- units: °C
                                                , "--High"     , "95"        -- units: °C
                                                , "--low"      , "#a3be8c"
                                                , "--normal"   , "#d08770"
                                                , "--high"     , "#bf616a"
                                                ] 10

      , Run DiskU [("/", "<fc=#88c0d0><fn=2></fn></fc> hdd: <free> free")] [] 3600

      , Run Memory                              [ "--template" ,"<fc=#88c0d0><fn=2> </fn></fc><fc=white></fc><usedratio> %"
                                                ] 10

      -- battery monitor
      , Run Battery        [ "--template" , "Batt: <acstatus>"
                             , "--Low"      , "30"        -- units: %
                             , "--High"     , "50"        -- units: %
                             , "--low"      , "#bf616a"
                             , "--normal"   , "#d08770"
                             , "--high"     , "#a3be8c"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>% (<timeleft>)"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#d08770>Charging</fc> <left>%"
                                       -- charged status
                                       , "-i"	, "<fc=#a3be8c>Charged</fc>"
                             ] 50

        -- network activity monitor (dynamic interface resolution)
      , Run DynNetwork     [ "--template" , "<dev>: <tx> kB/s|<rx> kB/s"
                             , "--Low"      , "100000"       -- units: B/s
                             , "--High"     , "2500000"       -- units: B/s
                             , "--low"      , "#a3be8c"
                             , "--normal"   , "#d08770"
                             , "--high"     , "#bf616a"
                             ] 10

      --, Volume "default" "Master" ["-t", "Vol: <volume>% <status>"] 10

      , Run Kbd                                [("us" , "US")]

      , Run UnsafeStdinReader

      , Run Date                                "%H:%M %a %d-%m-%Y" "date" 60

]

}
